<link rel="stylesheet" type= "text/css" href="styles.css"/>
<h1>My Weekly Gym Journal</h1>

<div class="buttonContainer" > 
    <a class="button add date font" href="/new">Add</a>
</div>


<div class="container">

 <%stuff.forEach(v => { %>
    <div class="cards">
        <div class="font"><a href="/<%= v._id %>"><%= v.label %></a> </div>
        <div class="font"><%=v.date %> </div>
        <div> <img src='<%=v.img %>' height="150"></div>

        <div class='cardButtonsParent'>
            <a class="button submit font" href="/<%=v.id%>/edit">Edit</a>
            <!-- <a class="font" href="/">delete</a> -->

            <form class= 'removeFormMargin' action="/<%=v.id%>?_method=DELETE" method='POST'>
                <input
                class='button cancel font' 
                    type="submit"
                    value="Delete"
                />
            </form>

           
        </div>      

    </div>
    
<% }) %>

</div>